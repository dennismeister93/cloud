{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "kilo-auto-fix-worker",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-20",
  "compatibility_flags": ["nodejs_compat"],
  // Production features
  "upload_source_maps": true,
  "observability": {
    "enabled": true,
  },
  "version_metadata": {
    "binding": "CF_VERSION_METADATA",
  },
  // Public environment variables
  "vars": {
    "ENVIRONMENT": "production",
    "API_URL": "https://app.kilo.ai",
    "CLOUD_AGENT_URL": "https://cloud-agent.engineering-e11.workers.dev",
  },
  // Durable Objects configuration
  "durable_objects": {
    "bindings": [
      {
        "name": "AUTO_FIX_ORCHESTRATOR",
        "class_name": "AutoFixOrchestrator",
        "script_name": "kilo-auto-fix-worker",
      },
    ],
  },
  "dev": {
    "port": 8792,
    "local_protocol": "http",
    "ip": "0.0.0.0",
  },
  // Migrations for Durable Objects
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["AutoFixOrchestrator"],
    },
  ],
}
